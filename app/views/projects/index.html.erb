<h1>Projects</h1>
<%= link_to 'New Project', new_project_path, class:"btn m-1 float-end btn-primary" %>

<table class="table table-bordered text-center table-hover">
  <thead class="table-dark">
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th>Contributors Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.id %></td>
        <td><%= project.title %></td>
        <td><%= project.description %></td>
        <td><%= project.status %></td>
        <td><%= project.employees.length %></td>
        <td><%= link_to 'Show', project, class: "btn btn-outline-success" %></td>
        <td><%= link_to 'Edit', edit_project_path(project), class: "btn btn-outline-secondary" %></td>
        <td><%= link_to 'Destroy', project, class: "btn btn-outline-danger" , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>